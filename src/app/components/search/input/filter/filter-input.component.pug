.filter {{name}}
  .btn((click)='visibleMenu()')
.sort-menu(*ngIf='visible')
  .sort-content
    input.filterInput([(ngModel)] = 'inputWord', (keyup) = 'autoComplete($event)', (keydown) = 'arrowsNavigation($event)')
    ul
      li(*ngFor='let li of sortList', (click)='acceptFilter($event)',
        (mousemove) = 'addMouseHighlight($event)',
        (mouseleave)='removeMouseHighlight()') {{li}}
